{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.enable": true,
  "eslint.run": "onSave", // Run ESLint on save or "onType" for real-time linting
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "javascript.validate.enable": false, // Disable VSCode's default JavaScript validation
  "typescript.validate.enable": false // Disable VSCode's default TypeScript validation
}
